# default: on
# description: Check MySql health Status
service check_mysql
{
	socket_type		= stream
	port            	= 60114
	protocol		= tcp
	wait			= no
	user			= root
	server			= /usr/local/bin/check_mysql.py
	server_args		= -v
	disable			= no
	per_source		= UNLIMITED
	cps			= 100 2
	flags			= REUSE
	only_from		= 0.0.0.0/0
	log_on_failure  	+= USERID
}
